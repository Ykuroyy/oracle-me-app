#!/bin/bash
set -e

echo "Starting docker-entrypoint..."

# Remove a potentially pre-existing server.pid for Rails.
rm -f /app/tmp/pids/server.pid

echo "Installing gems..."
# Install missing gems
bundle check || bundle install

echo "Checking environment variables..."
echo "RAILS_ENV: $RAILS_ENV"
echo "DATABASE_URL: ${DATABASE_URL:0:50}..." # Show first 50 chars for security

# Wait for database to be ready (only if DATABASE_HOST is set)
if [ -n "$DATABASE_HOST" ]; then
  echo "Waiting for database at $DATABASE_HOST..."
  until pg_isready -h $DATABASE_HOST -p ${DATABASE_PORT:-5432} -U ${DATABASE_USER:-postgres}; do
    echo "Waiting for database..."
    sleep 2
  done
  echo "Database is ready!"
fi

# Run database migrations
echo "Running database migrations..."
bundle exec rails db:migrate

# Seed database if needed
if [ "$RAILS_ENV" = "production" ]; then
  echo "Seeding production database..."
  bundle exec rails db:seed
fi

echo "Starting Rails server..."
# Then exec the container's main process (what's set as CMD in the Dockerfile).
exec "$@"
